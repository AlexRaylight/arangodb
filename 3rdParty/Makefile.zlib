################################################################################
### @brief zlib
################################################################################

BUILT_SOURCES += @ZLIB_LIBS@

@ZLIB_LIBS@: @srcdir@/.zlib-build-@TRI_BITS@

@srcdir@/.zlib-build-@TRI_BITS@:
	@echo
	@echo "--------------------------------------------------------------------------------"
	@echo "BUILDING zlib"
	@echo "--------------------------------------------------------------------------------"
	@echo

	mkdir @top_srcdir@/3rdParty/zlib-1.2.7 || true

	cd @top_srcdir@/3rdParty/zlib-1.2.7 && CC= CXX= ./configure

	cd @top_srcdir@/3rdParty/zlib-1.2.7 && $(MAKE)

	@touch @srcdir@/.zlib-build-@TRI_BITS@

	@echo
	@echo "--------------------------------------------------------------------------------"
	@echo "BUILD zlib FINISHED"
	@echo "--------------------------------------------------------------------------------"
	@echo

################################################################################
### @brief additional files to remove
################################################################################

CLEANUP_3RD += clean-zlib

clean-zlib:
	rm -f @srcdir@/.zlib-build-@TRI_BITS@
	cd @top_srcdir@/3rdParty/zlib-1.2.7 && $(MAKE) clean

