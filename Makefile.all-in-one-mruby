# -*- mode: Makefile; -*-

################################################################################
## LIBEV
################################################################################

BUILT_SOURCES += @MRUBY_LIBS@

@MRUBY_LIBS@: .mruby-build

.mruby-build:
	@echo
	@echo "--------------------------------------------------------------------------------"
	@echo "BUILDING LIBEV"
	@echo "--------------------------------------------------------------------------------"
	@echo

	cd @top_srcdir@/3rdParty/mruby && make -j1

	touch .mruby-build

	@echo
	@echo "--------------------------------------------------------------------------------"
	@echo "BUILD mruby FINISHED"
	@echo "--------------------------------------------------------------------------------"
	@echo
