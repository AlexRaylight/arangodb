<script id="dbSelectionView.ejs" type="text/template">
<a href="#" class="tab" id="dbselection"></span><div class="dbselection">DB: <%=current%></div> <b class="caret"></b></a>
<ul class="link-dropdown-menu" id="dbs_dropdown">
<%
if (list.length > 1) {
%>
    <li class="dropdown-header">DBs</li>
  <%
    list.each(function(o) {
    var i = o.get("name");
      if (i === current) {
          return;
      }
  %>
    <li class="dropdown-item">
        <a id=<%=i%> class="dbSelectionLink tab" href="#"><%=i%></a>
    </li>
  <%
    });
  %>
<%
}
%>
    <% if (current === "_system") { %>
    <li class="divider"></li>
      <li class="dropdown-header">Manager</li>
    <li id="databaseNavi" class="dropdown-item">
      <a id="databases" class="tab" href="#databases">Manage DBs</a>
    </li>
    <% } %>
</ul>
</script>
