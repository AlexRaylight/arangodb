dnl -*- mode: Autoconf; -*-

dnl -----------------------------------------------------------------------------------------
dnl option for V8 support
dnl -----------------------------------------------------------------------------------------

V8_CPPFLAGS="-I${srcdir}/3rdParty/V8/include"
V8_LDFLAGS=""
V8_TARGET="native"

if test x$tr_DARWIN == xyes;  then
  if test "x$tr_BITS" == x64;  then
    V8_TARGET="x64"
    V8_LIBS="${srcdir}/3rdParty/V8/out/x64/libv8_base.a ${srcdir}/3rdParty/V8/out/x64/libv8_nosnapshot.a"
  else
    V8_TARGET="ia32"
    V8_LIBS="${srcdir}/3rdParty/V8/out/ia32/libv8_base.a ${srcdir}/3rdParty/V8/out/ia32/libv8_nosnapshot.a"
  fi
else
  if test "x$tr_BITS" == x64;  then
    V8_TARGET="x64"
    V8_LIBS="${srcdir}/3rdParty/V8/out/x64/obj.target/tools/gyp/libv8_base.a ${srcdir}/3rdParty/V8/out/x64/obj.target/tools/gyp/libv8_nosnapshot.a"
  else
    V8_TARGET="ia32"
    V8_LIBS="${srcdir}/3rdParty/V8/out/ia32/obj.target/tools/gyp/libv8_base.a ${srcdir}/3rdParty/V8/out/ia32/obj.target/tools/gyp/libv8_nosnapshot.a"
  fi
fi

TRI_V8_VERSION="3.9.4"

dnl -----------------------------------------------------------------------------------------
dnl add substitutions
dnl -----------------------------------------------------------------------------------------

AC_SUBST(V8_CPPFLAGS)
AC_SUBST(V8_LDFLAGS)
AC_SUBST(V8_LIBS)
AC_SUBST(V8_TARGET)

V8_CPPFLAGS="${V8_CPPFLAGS} -DTRI_V8_VERSION='\"${TRI_V8_VERSION}\"'"

dnl -----------------------------------------------------------------------------------------
dnl informational output
dnl -----------------------------------------------------------------------------------------

LIB_INFO="$LIB_INFO|V8 VERSION: ${TRI_V8_VERSION}"

FLAG_INFO="$FLAG_INFO|V8_TARGET:   ${V8_TARGET}"
FLAG_INFO="$FLAG_INFO|V8_CPPFLAGS: ${V8_CPPFLAGS}"
FLAG_INFO="$FLAG_INFO|V8_LDFLAGS:  ${V8_LDFLAGS}"
FLAG_INFO="$FLAG_INFO|V8_LIBS:     ${V8_LIBS}"
FLAG_INFO="$FLAG_INFO|."


