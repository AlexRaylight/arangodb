dnl -*- mode: Autoconf; -*-

dnl -----------------------------------------------------------------------------------------
dnl option for V8 support
dnl -----------------------------------------------------------------------------------------

V8_CPPFLAGS="-I${srcdir}/3rdParty/V8/include"
V8_LDFLAGS=""

if test x$tr_DARWIN == xyes;  then
  V8_LIBS="${srcdir}/3rdParty/V8/out/native/libv8_base.a ${srcdir}/3rdParty/V8/out/native/libv8_nosnapshot.a"
else
  V8_LIBS="${srcdir}/3rdParty/V8/out/native/obj.target/tools/gyp/libv8_base.a ${srcdir}/3rdParty/V8/out/native/obj.target/tools/gyp/libv8_nosnapshot.a"
fi

TRI_V8_VERSION="3.9.24"

dnl -----------------------------------------------------------------------------------------
dnl add substitutions
dnl -----------------------------------------------------------------------------------------

AC_SUBST(V8_CPPFLAGS)
AC_SUBST(V8_LDFLAGS)
AC_SUBST(V8_LIBS)

V8_CPPFLAGS="${V8_CPPFLAGS} -DTRI_V8_VERSION='\"${TRI_V8_VERSION}\"'"

dnl -----------------------------------------------------------------------------------------
dnl informational output
dnl -----------------------------------------------------------------------------------------

LIB_INFO="$LIB_INFO|V8 VERSION: ${TRI_V8_VERSION}"

FLAG_INFO="$FLAG_INFO|V8_CPPFLAGS: ${V8_CPPFLAGS}"
FLAG_INFO="$FLAG_INFO|V8_LDFLAGS:  ${V8_LDFLAGS}"
FLAG_INFO="$FLAG_INFO|V8_LIBS:     ${V8_LIBS}"
FLAG_INFO="$FLAG_INFO|."


